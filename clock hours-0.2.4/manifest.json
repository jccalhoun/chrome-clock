{
  "manifest_version": 3,
  "name": "new clock hours",
  "description": "shows the hours",  "version": "0.2.4",
  "background": {
    "service_worker": "background_script.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png"
    },
    "default_popup": "popup.html",
    "default_title": "clock hours"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "storage",
    "alarms",
    "offscreen"
  ]
}